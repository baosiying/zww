<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>TopschServlet</servlet-name>
    <servlet-class>cn.web.servlet.TopschServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ImageServlet</servlet-name>
    <servlet-class>cn.web.servlet.ImageServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cn.web.servlet.LoginServlet</servlet-class>
  </servlet>



 <filter>
    <filter-name>character</filter-name>
    <filter-class>cn.web.filter.CharacterEncodingFilter</filter-class>
    
    <init-param>
      <param-name>oldEncoding</param-name>
      <param-value>ISO8859-1</param-value>
    </init-param>
    
    <init-param>
      <param-name>newEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  
  <servlet-mapping>
    <servlet-name>TopschServlet</servlet-name>
    <url-pattern>/topsch</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImageServlet</servlet-name>
    <url-pattern>/img</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
   <filter-mapping>
    <filter-name>character</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>